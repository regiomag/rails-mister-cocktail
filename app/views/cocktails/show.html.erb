<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.unsplash.it/900x600');">
  <div class="banner-content">
    <h1><%= @cocktail.name%></h1>
    <% @doses.each do |dose| %>
      <ul>
        <li>
          <p>
          <%= dose.description %> <%= dose.ingredient.name%>
          </p>
        </li>
      </ul>
    <% end %>
    <p></p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f|%>

      <%= f.input :description, label: "Enter a quatity", placeholder: "a spoon of" %>
      <%= f.input :ingredient_id, collection: Indgredient.all, prompt: "choose an ingredient" %>
    </div>
  </div>
</div>

